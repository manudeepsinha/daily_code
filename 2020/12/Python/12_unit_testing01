'''
This is a script for unit testing on capitalizing
of string function.
'''
import unittest
import 12_unit_testing00

class TestCap(unittest.TestCase):

	def test_one_word(self):
		test = 'python'
		result = 12_unit_testing00.cap_text(text)
		self.assertEqual(result,'Python')

	def test_multiple_words(self):
		text = 'more python'
		result = 12_unit_testing00.cap_text(text)
		self.assertEqual(result,'More Python')

if __name__ =='__main__':
	unittest.main()
